{
  "name": "simple",
  "description": "huliqun@126.com",
  "author": "huliqun <huliqun@126.com>",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf ./dist && tsc && tsconfig-replace-paths -v -p tsconfig.json -s ./src -o ./dist",
    "dev": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "debug": "node --inspect=0.0.0.0:9229 --use-strict ./bin/www",
    "genswagger": "rimraf ./dist && tsc && rimraf ./public/swagger/swagger.json && joi2swagger -r -v ./dist/services/ -h ./public/swagger/header.json -o ./public/swagger/swagger.json",
    "test": "mocha --recursive --watch --slow 300",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write  \"src/**/*\"",
    "createTable": "ts-node ./src/bin/createTable.ts"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.10.8",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "joi2swagger": "^1.0.0",
    "lodash": "^4.17.21",
    "log4js": "^6.4.1",
    "log4js-logstash-tcp": "^2.0.3",
    "mysql2": "^2.3.3",
    "node-srv-utils": "^1.0.3",
    "phone": "^3.1.13",
    "svg-captcha": "^1.4.0",
    "typeorm": "0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^8.3.2",
    "web3": "4.0.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/config": "0.0.41",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.179",
    "@types/node": "^17.0.19",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tsconfig-replace-paths": "^0.0.11",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
