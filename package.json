{
  "name": "simple",
  "description": "huliqun@126.com",
  "author": "huliqun <huliqun@126.com>",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf ./dist && tsc && tsconfig-replace-paths -v -p tsconfig.json -s ./src -o ./dist",
    "dev": "ts-node ./src/index.ts",
    "start": "node ./dist/index.js",
    "debug": "node --inspect=0.0.0.0:9229 --use-strict ./bin/www",
    "genswagger": "rimraf ./dist && tsc && rimraf ./public/swagger/swagger.json && joi2swagger -r -v ./dist/services/ -h ./public/swagger/header.json -o ./public/swagger/swagger.json",
    "test": "mocha --recursive --watch --slow 300",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write  \"src/**/*\"",
    "createTable": "ts-node ./src/bin/createTable.ts"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "config": "3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "1.11.8",
    "express": "4.18.2",
    "joi": "17.9.2",
    "joi2swagger": "^1.0.0",
    "lodash": "^4.17.21",
    "log4js": "6.9.1",
    "log4js-logstash-tcp": "2.0.5",
    "mysql2": "3.4.3",
    "node-srv-utils": "https://github.com/LiqunHu/node-srv-utils.git",
    "phone": "^3.1.13",
    "svg-captcha": "^1.4.0",
    "typeorm": "0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "9.0.0",
    "web3": "4.0.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "16.1.0",
    "@types/config": "3.3.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.17",
    "@types/lodash": "^4.14.179",
    "@types/node": "20.3.2",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-promise": "6.1.1",
    "pre-commit": "^1.2.2",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsconfig-replace-paths": "0.0.14",
    "tslib": "2.6.0",
    "typescript": "5.1.3"
  }
}
